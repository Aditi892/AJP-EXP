Exp 1:Key Listener

import java.awt.*;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.awt.event.KeyEvent;
import java.awt.event.KeyListener;
public class Exp1 extends Frame implements KeyListener,ActionListener {
Label l;
TextArea area;
Button b1;
Button b2;
Exp1()
{
l=new Label();
l.setBounds(20,50,100,20);
area=new TextArea();
area.setBounds(20,80,300,300);
area.addKeyListener(this);
b1=new Button ("Press me");
b1.setBounds(120,500,60,30);
b1.addActionListener(this);
b2=new Button("exit");
b2.setBounds(100,600,50,30);
b2.addActionListener(this);
add(l);
add(area);
add(b1);
add(b2);
setSize(800,800);
setLayout(null);
setVisible(true);}
public void keyTyped(KeyEvent varl) {
l.setText("Key typed");}
public void keyPressed(KeyEvent varl) {
l.setText("Key Pressed");}
public void keyReleased(KeyEvent varl) {
l.setText("Key Released");}
public static void main (String args[]) {
new Exp1();
}
public void actionPerformed(ActionEvent var1) {
if(var1.getSource()==b1) {
l.setText("Button press");
b1.setBackground(Color.pink);
b1.setForeground(Color.yellow);
}
if(var1.getSource()==b2) {
l.setText("exit");
b2.setBackground(Color.green);
setVisible(false);
}
}
}
